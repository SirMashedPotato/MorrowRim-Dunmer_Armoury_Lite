		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>MorrowRim_Dunmer_DunmerForgeFuelled</li>
				<li>MorrowRim_Dunmer_DunmerForgeElectric</li>
				<li MayRequire="SirMashedPotato.MorrowRim.TelvanniTechnology">MorrowRim_TelvanniForge</li>
			</recipeUsers>
			<defaultIngredientFilter Inherit="False"/>
		</recipeMaker>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<tradeTags>
			<li>Armor</li>
			<li>MorrowRim_Dunmer_Armour</li>
		</tradeTags>
		<thingSetMakerTags>
			<li>RewardStandardLowFreq</li>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<apparel>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
		</apparel>
		<possessionCount>1</possessionCount>
	</ThingDef>
