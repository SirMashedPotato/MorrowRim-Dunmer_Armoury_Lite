	<!-- ==========[MorrowRim_Dunmer_ArmourCuirass_ChitinRegular]========== -->
	<ThingDef ParentName="MorrowRim_Dunmer_ArmourMakeable_Chitin" Name="MorrowRim_Dunmer_ArmourCuirass_ChitinRegular">
		<defName>MorrowRim_Dunmer_ArmourCuirass_ChitinRegular</defName>
		<label>chitin cuirass</label>
		<description>A relatively standard cuirass, made of flexible insect chitin. Offers reasonable protection, and is rather light.\n\nTypically favoured by Ashlanders, bandits, and mercenaries.</description>
		<recipeMaker>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/MorrowRim_Chitin/Chitin_Regular/Chitin_Regular_Armour_Item</texPath>
		</graphicData>
		<costList>
			<InsectChitin>170</InsectChitin>
		</costList>
		<statBases>
			<WorkToMake>26000</WorkToMake>
			<MaxHitPoints>110</MaxHitPoints>
			<Mass>6</Mass>
			<Flammability>0.2</Flammability>
			<ArmorRating_Sharp>0.32</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.15</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Heat>4</Insulation_Heat>
			<EquipDelay>8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.3</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/MorrowRim_Chitin/Chitin_Regular/Chitin_Regular_Armour</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>MorrowRim_Dunmer_ChitinArmour_Standard</li>
			</tags>
		</apparel>
		<tradeTags>
			<li>MorrowRim_Dunmer_AshlanderArmour</li>
			<li>MorrowRim_Dunmer_FactionlessArmour_Chitin</li>
		</tradeTags>
	</ThingDef>
